<Window x:Class="ProjectFilm.LeesKaartData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectFilm"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="864" MinWidth="1024" 
        WindowStyle="None" ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Image x:Name="imgphoto" Height="200" Width="140"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right" Orientation="Vertical">
            <Button x:Name="btn_LeesKaart" Content="Lees Eidkaart uit" Margin="0,10,0,10" Click="btn_LeesKaart_Click"/>
            <Label x:Name="lblVoornaam" />
            <Label x:Name="lblNaam" />
            <Label x:Name="lblStraat" />
            <Label x:Name="lblZipCode" />
            <Label x:Name="lblStad" />
            <Label x:Name="lblGeboorteDatum" />
            <Label x:Name="lblRR" />
            <Label x:Name="lblKaartNummer" />
        </StackPanel>
    </DockPanel>
</Window>
